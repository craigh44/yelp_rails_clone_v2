<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h2>
	<ul>
		<% if can? :update, restaurant %>
		<li><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></li>
		<li><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></li>
		<% end %>
		<li><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></li>
		<h3>Reviews for <%= restaurant.name %></h3>

			<% if restaurant.reviews.any? %>
				<ul>
					<% restaurant.reviews.each do |review| %>
						<li>
							<%= review.thoughts %>: <%= review.rating %>/5
						</li>
					<% end %>
				</ul>
			<% else %>
				<p>No reviews.</p>
			<% end %>

	</ul>
		<% end %>
	<% else %>
		"No restaurants"
	<% end %>
		 	

<a href='restaurants/new'>Add a restaurant</a>

